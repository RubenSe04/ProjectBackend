<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Ubah Data Contact</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div>
            <% } %>


            <form method="post" action="/program-study?_method=PUT">
              <input type="hidden" name="_id" value="<%= programStudi._id %>" />
                <input type="hidden" name="oldNama" value="<%= programStudi.oldNama || programStudi.namaProdi %>" />
                <div class="mb-3">
                  <label for="namaProdi" class="form-label">Nama Prodi</label>
                  <input type="text" class="form-control" id="namaProdi" name="namaProdi" required 
                  value="<%= programStudi.namaProdi %>"/>
                <div class="mb-3">
                  <label for="fakultas" class="form-label">Fakultas</label>
                  <input type="fakultas" class="form-control" id="fakultas" name="fakultas" required 
                  value="<%= programStudi.fakultas %>"/>
                  <div class="mb-3 mt-2">
                    <label for="akreditasi" class="form-label">Akreditasi</label>
                    <select class="form-control" name="akreditasi" id="akreditasi" required>
                      <option disabled value="">Akreditasi</option>
                      <option <%= programStudi.akreditasi === 'A' ? 'selected' : '' %> value="A">A</option>
                      <option <%= programStudi.akreditasi === 'B' ? 'selected' : '' %> value="B">B</option>
                      <option <%= programStudi.akreditasi === 'C' ? 'selected' : '' %> value="C">C</option>
                      <option <%= programStudi.akreditasi === 'belum terakreditasi' ? 'selected' : '' %> value="belum terakreditasi">Belum Terakreditasi</option>
                    </select>
                  </div>
                  
                <button type="submit" class="btn btn-primary">Ubah Data Program Studi</button>
                <a
                href="/program-study"
                class="btn btn-success"
                > Batal</a
              >              </form>
        </div>
    </div>
</div>