<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Form Tambah Data Program Studi</h2>

            <% if (typeof errors != 'undefined') { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }) %>
                </ul>
              </div>
            <% } %>


            <form method="post" action="/program-study">
                <div class="mb-3">
                  <label for="namaProdi" class="form-label">Nama Prodi</label>
                  <input type="text" class="form-control" id="namaProdi" name="namaProdi" required>
                <div class="mb-3">
                  <label for="fakultas" class="form-label">Fakultas</label>
                  <input type="fakultas" class="form-control" id="fakultas" name="fakultas" required>
                <div class="mb-3 mt-2">
                    <select class="form-control" name="akreditasi" id="akreditasi" required>
                        <option selected disabled value="">Akreditasi</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                        <option value="belum terakreditasi">Belum Terakreditasi</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Tambah Data Program Studi</button>
              </form>
        </div>
    </div>
</div>